$passwordInputDisplay ?= inline-block;
$passwordInputIconWidth ?= 17px;
$passwordInputIconHeight ?= 17px;
$passwordInputIconRightOffset ?= 5px;
$passwordInputIconBgImage ?= 'data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7'; // empty 1px gif
$passwordInputIconBgRepeat ?= no-repeat;
$passwordInputIconBgPosition ?= 0 0;
$passwordInputIconBgPositionRevealed ?= -50px 0;

.passwordInput {
	display: $passwordInputDisplay;
	position: relative;

	&--passwordInput,
	&--textInput {
		box-sizing: border-box;
		width: 100%;
		height: 100%;
		padding-right: $passwordInputIconWidth + ($passwordInputIconRightOffset * 2);
	}

	&--passwordInput {
		display: block;
	}

	&--textInput {
		display: none;
	}

	&--icon {
		display: none;
		position: absolute;
		top: 50%;
		right: $passwordInputIconRightOffset;
		width: $passwordInputIconWidth;
		height: $passwordInputIconHeight;
		margin-top: -(@height / 2);
		cursor: pointer;

		background-image: url($passwordInputIconBgImage);
		background-repeat: $passwordInputIconBgRepeat;
		background-position: $passwordInputIconBgPosition;
		&-shown{
			display: block
		}
	}

	&-revealed {
		.passwordInput {
			&--passwordInput {
				display: none;
			}

			&--textInput {
				display: block;
			}

			&--icon {
				background-position: $passwordInputIconBgPositionRevealed;
			}
		}
	}
}